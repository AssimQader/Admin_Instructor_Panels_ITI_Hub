                            <label>Choose Intakes: </label>
                            <br >
                            <div >
                            <select asp-for="Input.IntakesIDs" asp-items="@allIntakes" multiple="multiple"  class="form-select-sm" >
                            </select>
                            </div>
                            </div>*@
