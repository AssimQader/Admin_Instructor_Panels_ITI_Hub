@using Admin_Panel_ITI.Areas.InstructorsArea.ViewModels;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <script src="~/assets/js/bootstrap.bundle.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
            padding-top: 24px;
        }

        .container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .link {
            margin: 0 auto;
            padding: 20px;
            color: dimgrey;
            border: 2px solid #333;
            border-radius: 10px;
            max-width: 400px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            font-size: 19px;
        }


        h1 {
            font-size: 24px;
            margin-top: 0;
        }

        form {
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            /* display: block; */
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"]:not(.ans),
        input[type="radio"],
        input[type="number"] {
            width: 100%;
            padding: 8px 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
            margin: 8px 0;
        }

        input[type="radio"] {
            width: auto;
            display: inline-block;
        }

        .ans {
            width: 65%;
            padding: 8px 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
            display: inline-block;
            margin: 8px 0;
        }

        button[type="submit"],
        button#submitExam {
            padding: 10px 15px;
            /*            background-color: #4caf50;*/
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
        }

        button[type="submit"] {
            background-color: dodgerblue;
        }

            button[type="submit"]:hover {
                background-color: steelblue;
            }

        button#submitExam {
            background-color: #4caf50;
        }

            button#submitExam:hover {
                background-color: #45a049;
            }

        #examQuestions {
            margin-top: 20px;
        }

        .question {
            margin-bottom: 20px;
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 4px;
        }

            .question h3 {
                margin-top: 0;
            }

            .question ul {
                list-style-type: none;
                padding: 0;
            }

                .question ul li {
                    margin-bottom: 5px;
                }

            .question p {
                margin-top: 10px;
                color: #888;
            }

        .add-answer {
            width: 100%;
            padding: 10px 0;
        }


        /*-----------------------------------------------*/



        .exam-card {
            border: 1px solid #ccc;
            padding: 20px;
            margin: 20px;
        }

        .question-card {
            border: 1px solid #ccc;
            padding: 20px;
            margin: 20px 0;
        }

        .choice {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            align-items: center; /* Vertically center the elements */
        }

            .choice input {
                flex: 1;
                margin-right: 10px;
            }

            .choice .delete-choice {
                color: red;
                cursor: pointer;
                margin-right: 5px;
            }


        .add-choice {
            color: green;
            font-size: 24px;
            cursor: pointer;
            margin-right: 10px;
            cursor: pointer;
        }



        .tooltiptext {
            visibility: hidden;
            width: 120px;
            background-color: #333;
            color: #fff;
            text-align: center;
            border-radius: 5px;
            padding: 5px;
            position: absolute;
            z-index: 1;
            bottom: 125%;
            left: 50%;
            transform: translateX(-50%);
            opacity: 0;
            transition: opacity 0.3s;
        }


        #correctOption:hover + .tooltiptext {
            visibility: visible;
            opacity: 1;
        }

        .answer {
            display: flex;
            align-items: center;
        }


            .answer input[type="text"] {
                flex-grow: 5;
                width: 380px;
            }

            .answer input[type="radio"] {
                margin-left: 3px;
            }

    </style>

</head>


<body>
    <div class="container">
        <h1>Create Exam</h1>
        <form id="examForm" asp-action="Createe" asp-controller="Exam" method="post">
            <div class="form-group">
                <div>
                    <label for="examName">Exam Name:</label>
                    <input name="ExamName" id="examName" required class="form-control">
                </div>
                <div>
                    <label for="examDuration">Exam Duration:</label>
                    <input name="Duration" id="examDuration" required class="form-control" type="number" />
                </div>
            </div>

            <input id="Questions" type="hidden" name="Questions" /> <!--hidden input its value is the questions in a form of JSON serialized string-->
            <input  type="hidden" name="CourseId" value="@ViewBag.Courseid" />


            <div id="questionsContainer" class="form-group">
                <div class="form-group  question ">
@*                        <label for="questionType">Question Type:</label>
                        <select class="form-control" id="questionType">
                            <option value="Paragraph">Paragraph</option>
                           <option value="MCQ">MCQ</option>
                        </select>*@


                     <input  name="Mark" id="questionType" required class="form-control" type="hidden" />

                    <div class="form-group">
                        <label for="Mark">Grade:</label>
                        <input name="Mark" id="Mark" required class="form-control" type="number" />
                    </div>

                    <div class="form-group">
                        <label for="questionBody">Question Body:</label>
                        <textarea name="questionBody" required class="form-control" wrap="soft" rows="3"></textarea>
                    </div>

                    <div id="choices">
                        <div class="form-group choice">
                            <span class="delete-choice">x</span> &nbsp;
                            <span class="add-choice">+</span>
                            <div class="answer">
                                <input type="text" class="form-control" placeholder="Choice" name="option">
                                <input type="radio" name="correctOption" required id="correctOption">
                                <span class="tooltiptext">Correct Answer</span>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="add-question">Add Question</button>
                </div>
            </div>
        </form>

        <div id="examQuestions">
            <!--where the created question will appear-->
        </div>

        <!-- Modal for editing MCQ Q-->
        <div class="modal" id="cardModal" tabindex="-1">
            <div class="modal-dialog" style="width: 400px; height: 300px;">
                <div class="modal-content">
                    <!-- Card content -->
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Question</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="editableTextarea" class="form-label">Question Body</label>
                            <textarea id="editableTextarea" class="form-control"></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="editableInput1" class="form-label">Choices</label>
                            <input id="editableInput1" type="text" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="editableInput2" class="form-label">Correct answer</label>
                            <input id="editableInput2" type="text" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="EditMark" class="form-label">Mark</label>
                            <input id="EditMark" type="text" class="form-control">
                        </div>

                    </div>

                    <!-- Save/close buttons -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="saveButton">Save</button>
                    </div>
                </div>
            </div>
        </div>


        <!--submit exam btn is disabled untill u create at least one question with its options and correct answer-->
        <button id="submitExam">Submit Exam</button> 
    </div>

    <br />

    <!--google form ink-->
    <p class="link">
        Or create an exam using <span style="color:rebeccapurple;">Google Forms</span>
        <a href="https://docs.google.com/forms/d/1vuhwmYfzsdaDHoip0jn6miJL5NBq65mxbS3wn8rCjFU/edit" target="_blank" class="google-forms-link">
            <i class="fa-solid fa-file-lines fa-lg" style="color: #7330c5;"></i>
        </a>
    </p>


    <script src="~/ExamScript.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
</body>

</html>
