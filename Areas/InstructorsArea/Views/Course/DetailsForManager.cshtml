
@using Admin_Panel_ITI.Areas.InstructorsArea.ViewModels;

@model IEnumerable<InstructorCourseVM>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ITI - Hub</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/styles.css">
    <script src="~/assets/js/bootstrap.bundle.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>

    <style>

            /* Style for the anchor tag (button) */
            .nav-item p {
                display: inline-block;
                padding: 10px 30px;
                background-color: darkgray; /* Blue background color */
                color: black; /* Text color */
                font-size: 17px;
                text-decoration: none;
                position: relative;
                z-index: 1; /* Keep buttons above arrows */

                opacity: 0.8;
                cursor: not-allowed;
            }

    </style>


    <style>
        .button {
            line-height: 1;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: .75rem;
            background-color: #1977f3;
            color: #fff;
            border-radius: 10rem;
            font-weight: 600;
            padding: .75rem 1.5rem;
            padding-left: 20px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            transition: background-color .5s;
            margin-bottom: 16px; /* Spacing between list items */
            position: relative; /* Position relative for arrow */
        }


        .button__icon-wrapper {
            flex-shrink: 0;
            width: 25px;
            height: 25px;
            position: relative;
            color: black;
            background-color: #fff;
            border-radius: 50%;
            display: grid;
            place-items: center;
            overflow: hidden;
        }

        .button:hover {
            background-color: #1977f3;
        }

        .button:hover .button__icon-wrapper {
            color: blue;
        }

        .button__icon-svg--copy {
            position: absolute;
            transform: translate(-150%, 150%);
        }

        .button:hover .button__icon-svg:first-child {
            transition: transform .3s ease-in-out;
            transform: translate(150%, -150%);
        }

        .button:hover .button__icon-svg--copy {
            transition: transform .3s ease-in-out .1s;
            transform: translate(0);
        }

    </style>

</head>
<body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="light">
        <div class="container-fluid">
            <a class="navbar-brand" href="index.html" style="margin-left: 24px;">
                <img src="~/assets/images/iti-logo.png" alt="Logo" width="33" height="50" class="d-inline-block align-text-top">
            </a>
            <div class="navbarvr"></div>
            <span class="collapse navbar-collapse  navbar-brand">ITI-Hub</span>
            <div class="justify-content-end" id="navbarSupportedContent">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/Identity/Account/Login" method="post">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <div class="d-flex flex-column flex-shrink-0 p-lg-4 bg-body-tertiary" style="width: 280px; height: 93vh;">
                    <span class="d-flex align-items-center mb-3 mb-md-0 me-md-auto ">
                        <span class="nav-title">Navigation</span>
                    </span>

                    <hr>


                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item navs">
                           @* <a asp-controller="Intake" asp-action="Index" class="nav-link" style="border-radius:50px">@ViewBag.IntakeName</a>*@

                            <a style="--clr: #7808d0" class="button" asp-controller="Intake" asp-action="Index">
                                <span class="button__icon-wrapper">
                                    <svg width="10" class="button__icon-svg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 15">
                                        <path fill="currentColor" d="M13.376 11.552l-.264-10.44-10.44-.24.024 2.28 6.96-.048L.2 12.56l1.488 1.488 9.432-9.432-.048 6.912 2.304.024z"></path>
                                    </svg>

                                    <svg class="button__icon-svg  button__icon-svg--copy" xmlns="http://www.w3.org/2000/svg" width="10" fill="none" viewBox="0 0 14 15">
                                        <path fill="currentColor" d="M13.376 11.552l-.264-10.44-10.44-.24.024 2.28 6.96-.048L.2 12.56l1.488 1.488 9.432-9.432-.048 6.912 2.304.024z"></path>
                                    </svg>
                                </span>
                                @ViewBag.IntakeName
                            </a>
                        </li>


                        <li class="nav-item navs">
                            <a style="--clr: #7808d0" class="button" asp-controller="Track" asp-action="DetailsForManager" asp-route-id="@ViewBag.IntakeID" asp-route-name="@ViewBag.IntakeName">
                                <span class="button__icon-wrapper">
                                    <svg width="10" class="button__icon-svg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 15">
                                        <path fill="currentColor" d="M13.376 11.552l-.264-10.44-10.44-.24.024 2.28 6.96-.048L.2 12.56l1.488 1.488 9.432-9.432-.048 6.912 2.304.024z"></path>
                                    </svg>

                                    <svg class="button__icon-svg  button__icon-svg--copy" xmlns="http://www.w3.org/2000/svg" width="10" fill="none" viewBox="0 0 14 15">
                                        <path fill="currentColor" d="M13.376 11.552l-.264-10.44-10.44-.24.024 2.28 6.96-.048L.2 12.56l1.488 1.488 9.432-9.432-.048 6.912 2.304.024z"></path>
                                    </svg>
                                </span>
                                @ViewBag.TrackName Track
                            </a>
                        </li>


                        <li class="nav-item navs">
                            <p style="border-radius:50px;">Courses</p>
                        </li>

                    </ul>

                </div>
            </div>

            <!--Forward/Back-->
            <div class="col-md-10 text-center content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="r1">
                            <div class="row">
                               
                            </div>
                        </div>
                    </div>
                    <div class="list-group" style="margin: 0 40px; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; flex-direction: row;">
                        @foreach (var item in Model)
                        {
                            <div class="list-group-item list-group-item-action" aria-current="true" style="margin-bottom: 48px; width: 30%; padding-top: 16px; padding-bottom: 16px;">
                                <div class="d-flex justify-content-between" style="margin-bottom: 16px;">
                                    <h5 class="mb-1">@item.CourseName</h5>
                                    <small>@item.Duration Days</small>
                                </div>
                                <p class="mb-1 d-flex">Instructor: @item.InstructorName</p>
                                <small class="mb-1 d-flex">Created by: @item.AdminName</small>
                            </div>
                        }
                    </div>

                    <div class="footer">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-end">
                                <li class="page-item disabled">
                                    <a class="page-link">Previous</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
