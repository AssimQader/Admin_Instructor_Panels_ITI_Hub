                                    <div class="row">
                                        <div class="col" style="display:inline-flex">
                                            <a asp-controller="Intake" asp-action="Index" class="text-primary" style="padding-left:50px; width:140px ">@ViewBag.IntakeName</a>
                                        </div>
                                        <div class="col" style="display:inline-flex">
                                            <span><i class="fas fa-arrow-right"></i></span>
                                            <a asp-controller="Track" asp-action="DetailsForManager" asp-route-id="@ViewBag.IntakeID" asp-route-name="@ViewBag.IntakeName" class="text-primary" style="padding-left:15px; width:155px">@ViewBag.TrackName Track</a>
                                        </div>
                                        <div class="col" style="display:inline-flex">
                                            <span><i class="fas fa-arrow-right"></i></span>
                                            <p style="padding-left:20px ; font-weight:bold">Students</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

