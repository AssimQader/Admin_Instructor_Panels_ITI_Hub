@model Student

<style>
    .validationWrapper {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        align-items: flex-start;
    }
</style>

<div class="col-9 col-md-10 col-sm-9">
<div class="container-fluid edit-student">
    <h3 style="margin: 30px 0; text-align: center;">Edit Student</h3>

    <form id="myformstudent" asp-controller="Student" asp-action="Edit" method="post">

        <!-- Include the student ID as a hidden field -->
        <input asp-for="AspNetUserID" type="hidden" />

        <div class="validationWrapper">
            <div class="input-group mb-2 input-group-lg" style="margin-top: 16px;">
                <span class="input-group-text">Full Name</span>
                <input asp-for="AspNetUser.FullName" class="form-control" aria-label="Sizing example input" placeholder="Enter full name">
            </div>
            <span asp-validation-for="AspNetUser.FullName" class="text-danger" style="padding-left:10px; width:auto"></span>
        </div>

        <div class="validationWrapper">
            <div class="input-group mb-2 input-group-lg" style="margin-top: 16px;">
                <span class="input-group-text">Is Graduatede</span>
                    <input asp-for="IsGraduated" class="form-check-input" />
            </div>
        </div>

        <div class="validationWrapper">
            <div class="input-group mb-2 input-group-lg" style="margin-top: 16px;">
                <span class="input-group-text">Creation Date</span>
                <input asp-for="CreationDate" class="form-control" aria-label="Sizing example input" placeholder="Enter full name">
            </div>
            <span asp-validation-for="CreationDate" class="text-danger" style="padding-left:10px; width:auto"></span>
        </div>

        <div class="validationWrapper">
            <div class="input-group mb-2 input-group-lg" style="margin-top: 16px;">
                <span class="input-group-text">Intake</span>
                <select asp-for="IntakeID" asp-items="ViewBag.AllIntakes" class="form-control"></select>
            </div>
                <span asp-validation-for="IntakeID" class="text-danger" style="padding-left:10px; width:auto"></span>
        </div>

        <div class="validationWrapper">
            <div class="input-group mb-2 input-group-lg" style="margin-top: 16px;">
                <span class="input-group-text">Track</span>
                <select asp-for="TrackID" asp-items="ViewBag.AllTracks" class="form-control"></select>
            </div>
            <span asp-validation-for="TrackID" class="text-danger" style="padding-left:10px; width:auto"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Edit Student" class="btn btn-primary" />
        </div>
    </form>
</div>
</div>


<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>