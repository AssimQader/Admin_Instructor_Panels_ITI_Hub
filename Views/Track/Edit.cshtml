@model Admin_Panel_ITI.Models.Track

<div class="container-fluid col-md-6">
    <h3 style="margin-top: 32px;">Edit Track</h3>
    <form asp-action="Edit">
        <div class="input-group mb-3 input-group-lg" style="margin-top: 16px;">
            <span class="input-group-text" style="width: 170px; font-size: 20px;">Track name</span>
            <input asp-for="Name" class="form-control" aria-label="Sizing example input" placeholder="Enter track name" value="@Model.Name">
        </div>
        <div class="input-group mb-3 input-group-lg" style="margin-top: 16px;">
            <span class="input-group-text" style="width: 170px; font-size: 20px;">Creation Date</span>
            <input asp-for="CreationDate" class="form-control" aria-label="Sizing example input" placeholder="Enter track creation date" value="@Model.CreationDate.ToString("yyyy-MM-dd")">
        </div>
        <div class="input-group mb-3 input-group-lg" style="margin-top: 16px;">
            <span class="input-group-text" style="width: 170px; font-size: 20px;">Manager Name</span>
            <select asp-for="ManagerID" asp-items="ViewBag.AllInstructors" class="form-control">
                <option value="">Select manager</option>
            </select>
        </div>

        <div class="form-group">
            <input type="submit" value="Edit Track" class="btn btn-primary" />
        </div>
    </form>
</div>
