@model Track

<style>
    .validationWrapper{
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        align-items: flex-start;
    }
</style>

<div class="col-9 col-md-10 text-center content">

<div class="container-fluid create-track">
        <h3 style="margin: 30px 0;">Create New Track</h3>
    <form asp-action="Create">

        <div class="validationWrapper">
            <div class="input-group mb-2 input-group-lg" style="margin-top: 16px;">
                <span class="input-group-text">Track name</span>
                <input asp-for="Name" class="form-control" aria-label="Sizing example input" placeholder="Enter track name">
            </div>
                <span asp-validation-for="Name" class="text-danger" style="padding-left:10px; width:auto"></span>
        </div>


        <div class="validationWrapper">
            <div class="input-group mb-2 input-group-lg" style="margin-top: 16px;">
                <span class="input-group-text">Creation Date</span>
                <input asp-for="CreationDate" class="form-control" aria-label="Sizing example input" placeholder="Enter track creation date">
            </div>
            <span asp-validation-for="CreationDate" class="text-danger" style="padding-left:10px; width:auto"></span>
        </div>



        <div class="validationWrapper">
            <div class="input-group mb-2 input-group-lg" style="margin-top: 16px;">
                <span class="input-group-text">Manager Name</span>
                <select asp-for="ManagerID" asp-items="ViewBag.AllInstructors" class="form-control">
                    <option value="">Select manager</option>
                </select>
            </div>
                <span asp-validation-for="ManagerID" class="text-danger" style="padding-left:10px; width:auto"></span>
                
        </div>
       
        <div class="form-group">
            <input type="submit" value="Create Track" class="btn btn-primary" />
        </div>
    </form>
</div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>