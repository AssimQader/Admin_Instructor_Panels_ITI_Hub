@{
}


<div class="d1">
    <h2 class="allintakes">All Intakes Data</h2>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Intake Number
        </button>
        <div class="dropdown-content" style="height: 250px; overflow-y: auto;">
            <a href="index.html" >All Intakes</a>
            
            @foreach (var intake in (IEnumerable<Intake>)ViewData["Intakes"])
            {
                <a>@intake.Name</a>
            }

        </div>
    </div>
</div>
<!-- 4 Cards ( Tracks, Courses, Instructor, Student ) -->
<div class="container text-center">
    <div class="row align-items-center">
        <div class="col">
            <div>
                <a style="padding-top: 8px;" class="card stretched-link text-decoration-none track-card" style="width: 18rem;" href="track.html">
                    <img src="assets/images/tracks.png" class="card-img-top card-text" alt="tracks" style="width: 130px; height: 130px; margin: 10px auto 0px;">
                    <div class="card-body">
                        <div class="card-body">
                            <h4 class="card-text">@Model.TrackNumber</h4>
                            <h3 class="card-text">Track</h4>
                        </div>
                </a>
            </div>
        </div>
        <div class="col">
            <div>
                <a style="padding-top: 8px;" class="card stretched-link text-decoration-none" style="width: 18rem;" href="courses.html">
                    <img src="assets/images/courses.png" class="card-img-top" alt="courses" style="width: 130px; height: 130px; margin: 10px auto 0px;">
                    <div class="card-body">
                        <h4 class="card-text">300</h4>
                        <h3 class="card-text">Course</h3>
                    </div>
                </a>
            </div>
        </div>
        <div class="col">
            <div>
                <a style="padding-top: 8px;" class="card stretched-link text-decoration-none" style="width: 18rem;" href="instructors.html">
                    <img src="assets/images/instructor.png" class="card-img-top" alt="instructors" style="width: 130px; height: 130px; margin: 10px auto 0px;">
                    <div class="card-body">
                        <h4 class="card-text">100</h4>
                        <h3 class="card-text">Instructor</h3>
                    </div>
                </a>
            </div>
        </div>
        <div class="col">
            <div>
                <a style="padding-top: 8px;" class="card stretched-link text-decoration-none" style="width: 18rem;" href="students.html">
                    <img src="assets/images/student.png" class="card-img-top" alt="students" style="width: 130px; height: 130px; margin: 10px auto 0px;">
                    <div class="card-body">
                        <h4 class="card-text">15000</h4>
                        <h3 class="card-text">Student</h3>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
