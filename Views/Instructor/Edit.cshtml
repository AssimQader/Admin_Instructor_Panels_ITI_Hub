@model Admin_Panel_ITI.Models.Instructor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Instructor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminID" class="control-label"></label>
                <input asp-for="AdminID" class="form-control" value=@Model.AdminID readonly />
                <span asp-validation-for="AdminID" class="text-danger"></span>
            </div>

           

            <div class="form-group">
                <label for="SelectedCourses">Select Courses:</label>
                <select name="SelectedCourses" class="form-control" multiple>
                    <optgroup label="Available Courses">
                        @foreach (var course in (SelectList)ViewData["CourseList"])
                        {
                            var isSelected = Model.InstructorCourses.Any(ic => ic.CourseID.ToString() == course.Value);

                            if (!isSelected)
                            {
                                <option value="@course.Value">@course.Text</option>
                            }
                        }
                    </optgroup>
                    <optgroup label="Selected Courses">
                        @foreach (var course in Model.InstructorCourses)
                        {
                            <option value="@course.CourseID" disabled>
                                @course.Course.Name
                            </option>
                        }
                    </optgroup>
                </select>
            </div>

            <div class="form-group">
                <label for="selectedIntakes">Select Intakes:</label>
                <select name="selectedIntakes" class="form-control" multiple>
                    <optgroup label="Available Intakes">
                        @foreach (var intake in (SelectList)ViewData["IntakeList"])
                        {
                            var isSelected = Model.IntakeInstructors.Any(ic => ic.IntakeID.ToString() == intake.Value);

                            if (!isSelected)
                            {
                                <option value="@intake.Value">@intake.Text</option>
                            }
                        }
                    </optgroup>
                    <optgroup label="Selected Intakes">
                        @foreach (var intake in Model.IntakeInstructors)
                        {
                            <option value="@intake.IntakeID" disabled>
                                @intake.Intake.Name
                            </option>
                        }
                    </optgroup>
                </select>
            </div>

           



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
